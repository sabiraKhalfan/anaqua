<div class="row isotope-grid">
	{{#each products}}
	<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item {{this.category.name}}">
		<!-- Block2 -->
		<div class="block2">
			<div class="block2-pic hov-img0">
				<img src="/multerimages/{{this.image.[0]}}">

				<a href="/product_detail/{{this._id}}"
					class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
					Quick View
				</a>
			</div>

			<div class="block2-txt flex-w flex-t p-t-14">
				<div class="block2-txt-child1 flex-col-l ">
					<a href="/product_detail/{{this._id}}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
						{{this.name}}
					</a>
					<div>
						<s>
							<span class="stext-105 cl3">
								{{this.price}}
							</span>
						</s>
						<span class="stext-105 cl3">
							<p>New Price â‚¹{{this.sellingprice}} </p>
						</span>
					</div>


				</div>

				<div class="block2-txt-child2 flex-r p-t-3">
					<a id="wish" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2"
						onclick="addToWishlist('{{this._id}}')">
						<img class="icon-heart1 dis-block trans-04" src="images/icons/icon-heart-01.png" alt="ICON">
						<img class="icon-heart2 dis-block trans-04 ab-t-l" src="images/icons/icon-heart-02.png"
							alt="ICON">
					</a>
				</div>
			</div>
		</div>
	</div>
	{{/each}}
</div>